@model Book.UI.Models.BookModel

@{
    ViewData["Title"] = "Details";
}

<h1>Book Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PublishedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PublishedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsTaken)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsTaken)
        </dd>
            @foreach (var author in Model.Authors)
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Authors)
                </dt>
                <dd class = "col-sm-10"></dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => author.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => author.Name)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => author.Surname)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => author.Surname)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => author.BirthDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => author.BirthDate)
                </dd>
            }
    </dl>
</div>
<div>
    <a class="btn btn-warning" a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a class="btn btn-info" a asp-action="Index">Back to List</a>
</div>
